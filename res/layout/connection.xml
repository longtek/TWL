<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	 <TextView 
        android:textAppearance="?android:textAppearanceLarge" 
        android:id="@id/TextConnectedToConn" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="@string/NotConnected" />
	  <Space 
        android:layout_width="fill_parent" 
        android:layout_height="20.0dip" />
	  
	  <RelativeLayout 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">

    	<Button
    	    android:id="@+id/btn_scandevices"
    	    android:layout_width="wrap_content"
    	    android:layout_height="50.0dip"
    	    android:layout_alignParentLeft="true"
    	    android:layout_alignParentTop="true"
    	    android:background="@color/blue"
    	    android:padding="5.0dip"
    	    android:text="ScanDevices"
    	    android:textColor="@android:color/white" />
    	
    </RelativeLayout>
    
	  <Space 
    	    android:layout_width="fill_parent" 
        	android:layout_height="20.0dip" />
	  
	<LinearLayout
	    android:layout_width="fill_parent" 
        android:layout_height="wrap_content" >
	  
	    <TextView 
            android:textAppearance="?android:textAppearanceLarge" 
            android:id="@+id/tv_settingsfiles" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="The file loaded:" />

	     <TextView
	         android:id="@+id/tv_showfile"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:textAppearance="?android:textAppearanceLarge" />
	     
	 </LinearLayout>  
	 
	    <Button 
        android:textColor="@android:color/white" 
        android:id="@+id/btn_settingsfiles" 
        android:background="@color/blue" 
        android:padding="5.0dip" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_below="@id/tv_settingsfiles"
        android:text="Files Settings" />
	  
	<Space 
    	android:layout_width="fill_parent" 
        android:layout_height="20.0dip" />
	
    <ToggleButton 
        android:id="@id/buttonSpyOnOffCan" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:checked="false" 
        android:text="Spy On/Off" />
    
    <TableLayout 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_marginEnd="5.0dip">
        
        <TableRow 
            android:id="@id/tableRow1" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content">
            
            <TextView 
                android:textAppearance="?android:textAppearanceLarge" 
                android:gravity="right" 
                android:id="@id/TextView01" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginRight="5.0dip" 
                android:text="@string/RPM" />
            
            <TextView 
                android:textAppearance="?android:textAppearanceLarge" 
                android:id="@id/textViewRPMCan" 
                android:layout_width="60.0dip" 
                android:layout_height="wrap_content" />
            
            <TextView 
                android:textAppearance="?android:textAppearanceLarge" 
                android:id="@id/TextView04" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="5.0dip" 
                android:text="rpm" />
        </TableRow>
        
        <TableRow 
            android:id="@id/tableRow2" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content">
            
            <TextView 
                android:textAppearance="?android:textAppearanceLarge" 
                android:gravity="right" 
                android:id="@id/TextView02" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginRight="5.0dip" 
                android:text="@string/Speed" />
            
            <TextView 
                android:textAppearance="?android:textAppearanceLarge" 
                android:id="@id/textViewSpeedCan" 
                android:layout_width="60.0dip" 
                android:layout_height="wrap_content" />
            
            <TextView 
                android:textAppearance="?android:textAppearanceLarge" 
                android:id="@id/TextView05" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="5.0dip" 
                android:text="km/h" />
        </TableRow>
        
        <TableRow 
            android:id="@id/tableRow3" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content">
            
            <TextView 
                android:textAppearance="?android:textAppearanceLarge" 
                android:gravity="right" 
                android:id="@id/TextView03" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginRight="5.0dip" 
                android:text="@string/Throttle" />
            
            <TextView 
                android:textAppearance="?android:textAppearanceLarge" 
                android:id="@id/textViewThrottleCan" 
                android:layout_width="60.0dip" 
                android:layout_height="wrap_content" />
            
            <TextView 
                android:textAppearance="?android:textAppearanceLarge" 
                android:id="@id/TextView06" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="5.0dip" 
                android:text="%" />
        </TableRow>
    </TableLayout>
   
</LinearLayout>
